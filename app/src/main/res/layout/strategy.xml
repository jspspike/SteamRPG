<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:onClick="tap">

    <TextView
        android:id="@+id/floorSt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ff32405d"
        android:text="Floor 0 - Island"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/floorSt"
        android:layout_below="@+id/floorSt"
        android:adjustViewBounds="true"
        android:src="@drawable/towerhires" />

    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/avatar2"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/avatarbar1"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="50dp"
        android:background="#ff000000" />

    <TextView
        android:id="@+id/waves"
        style="?android:attr/progressBarStyleHorizontal"
        android:text="Waves left: 10"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:gravity="center"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:padding="0dp"
        android:textIsSelectable="false"
        android:background="#303030"
        android:layout_below="@+id/floorSt"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/text"
        android:padding="5dp"
        android:textSize="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView3"
        android:textColor="@android:color/primary_text_light" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background"
        android:background="#ff393939" />

    <Button
        android:id="@+id/race_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Next Wave"
        android:onClick="wave"
        android:layout_below="@+id/avatarbar1"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageView2" />

    <ImageView
        android:id="@+id/attackBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/avatarbar1"
        android:layout_alignStart="@+id/avatarbar1"
        android:layout_below="@+id/floorSt"
        android:layout_marginTop="125dp"
        android:adjustViewBounds="true"
        />

</RelativeLayout>
