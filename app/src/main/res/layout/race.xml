<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:onClick="tap">

    <TextView
        android:id="@+id/floor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ff32405d"
        android:text="Floor 1 - Race"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/floor"
        android:layout_below="@+id/floor"
        android:adjustViewBounds="true"
        android:src="@drawable/track" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/avatarbar1"
        android:layout_alignStart="@+id/avatarbar1"
        android:layout_below="@+id/floor"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/avatar2" />

    <ImageView
        android:id="@+id/avatarbar1"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="50dp"
        android:background="#ff000000" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/avatarbar1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="50dp"
        android:background="#ff000000" />

    <ImageView
        android:id="@+id/avatar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:adjustViewBounds="true"
        android:src="@drawable/target" />

    <TextView
        android:id="@+id/enemy_time_t"
        android:text="55:21"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/avatar2"
        android:layout_alignStart="@+id/avatar2"
        android:layout_alignEnd="@+id/avatar2"
        android:textSize="15dp"
        android:padding="0dp"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/player_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:text="62:39"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/avatar2"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:textSize="15dp"
        android:padding="0dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="You are challenged to a race."
        android:id="@+id/text"
        android:layout_alignBottom="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundcorner"
        android:padding="5dp"
        android:textSize="30dp"
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background"
        android:background="#ff393939" />

    <Button
        android:id="@+id/race_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_below="@+id/background"
        android:layout_marginEnd="43dp"
        android:layout_toStartOf="@+id/timer_text"
        android:text="RACE!"
        android:onClick="race" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/background"
        android:background="@drawable/rectangle3"
        android:gravity="center"
        android:padding="2px"
        android:text="12:03:55"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attack_button"
        android:layout_below="@+id/background"
        android:layout_toStartOf="@+id/timer"
        android:gravity="center"
        android:text="Auto \n Attack in:" />

    <ImageView
        android:id="@+id/attackBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/avatarbar1"
        android:layout_alignStart="@+id/avatarbar1"
        android:layout_below="@+id/floor"
        android:layout_marginTop="125dp"
        android:adjustViewBounds="true"
        />

</RelativeLayout>
